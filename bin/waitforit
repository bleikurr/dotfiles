#!/usr/bin/bash

pid=$1
task=$(test -z $2 && echo task || echo $2)
notify=$(test "$3" = "notify" && echo 1)

frames="/ | \ \ -"


while kill -0 $pid 2>&1 > /dev/null;
do
    for frame in $frames;
    do
        printf "\r$frame Running $task"
        sleep 0.5
    done
done

printf "\r$task done\033[K\n"

if [ $notify ]; then
    notify-send "$task" "$task has finished running"
fi



