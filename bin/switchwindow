#!/bin/bash
FILE=~/.switchwindowlast

CURRENT=$(xdotool getactivewindow getwindowname)

if [ "$1" == "last" ]; then
    if [ -f $FILE ]; then
        wmctrl -a $(<$FILE)
        echo $CURRENT > $FILE
    fi
else
    echo $CURRENT | grep -i "$1" && exit 0
    wmctrl -a $1
    echo $CURRENT > $FILE
fi
